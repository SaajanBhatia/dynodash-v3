    android:id="@+id/restaurant_navigation"
    app:startDestination="@+id/navigation_tables">

    <fragment
        android:id="@+id/navigation_tables"
        android:name="com.example.dynodash.ui.restaurant.tables.TablesFragment"
        android:label="@string/nav_tables_title"
