    <fragment
        android:id="@+id/navigation_menu"
        android:name="com.example.dynodash.ui.restaurant.menu.MenuFragment"
        android:label="@string/nav_menu_title"
        tools:layout="@layout/restaurant_menu_fragment" />

    <fragment
        android:id="@+id/navigation_orders"
        android:name="com.example.dynodash.ui.restaurant.orders.OrdersFragment"
        android:label="@string/nav_orders_title"
        tools:layout="@layout/restaurant_orders_fragment" />

    <fragment
        android:id="@+id/navigation_code"
